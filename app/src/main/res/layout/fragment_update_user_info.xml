<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/bottom_sheet_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp">

        <View
            android:layout_width="150dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/bottom_sheet_view_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Update User Infomation" />

        <EditText
            android:id="@+id/edUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/conduit_dark_gray"
            android:hint="Username"
            />

        <EditText
            android:id="@+id/edEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/conduit_dark_gray"
            android:hint="Email id"
            />

        <EditText
            android:id="@+id/edBioId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="18sp"
            android:lines="5"
            android:layout_gravity="center"
            android:textColor="@color/conduit_dark_gray"
            android:hint="Bio"
            />

        <EditText
            android:id="@+id/edImageId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/conduit_dark_gray"
            android:hint="Image Url"
            />


        <EditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/conduit_dark_gray"
            android:hint="Password"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/updateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_gravity="center"
            android:paddingHorizontal="80dp"
            android:paddingVertical="5dp"
            android:textSize="16sp"
            android:background="@drawable/green_circuler_background"
            android:layout_marginBottom="30dp"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            />
    </LinearLayout>

</LinearLayout>