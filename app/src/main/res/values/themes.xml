<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlogoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/conduit_green</item>
        <item name="colorPrimaryVariant">@color/conduit_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/conduit_green</item>
        <item name="colorSecondaryVariant">@color/conduit_dark_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/conduit_dark_green</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.BlogoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlogoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>

    </style>


    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="buttonStyle">@style/bottomButtomStyle</item>
    </style>
    <style name="bottomButtomStyle" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="background">@drawable/green_circuler_background</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">5dp</item>
    </style>

    <style name="Theme.BlogoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>